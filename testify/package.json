{
  "name": "testify",
  "version": "1.0.0",
  "displayName": "Testify",
  "description": "AI-powered test file generator for VSCode",
  "main": "./dist/extension.js",
  "publisher": "bolaji-bolajoko",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onCommand:testify.generateTest"
  ],
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "testify.generateTest",
        "title": "Testify: Generate Test File",
        "category": "Testify"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "testify.generateTest",
          "when": "resourceLangId != markdown",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "testify.generateTest",
          "when": "resourceLangId == javascript || resourceLangId == typescript",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "testify.generateTest",
          "when": "resourceLangId == javascript || resourceLangId == typescript",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "compile": "tsc -p",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -w",
    "package": "vsce package"
  },
  "author": "Bolaji Bolajoko",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^16.4.7"
  }
}
